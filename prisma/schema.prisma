generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TENANT
  LANDLORD
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  image     String?
  role      Role     @default(TENANT)
  landlord  Landlord?
  tenant    Tenant?
  maintenanceTicketsRequested MaintenanceTicket[] @relation("TicketRequester")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Landlord {
  id        String    @id @default(cuid())
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id])
  properties Property[]
}

model Tenant {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  leases    Lease[]
}

model Property {
  id          String    @id @default(cuid())
  title       String
  type        String
  status      String
  price       Int
  currency    String    @default("USD")
  address     String
  city        String
  state       String?
  country     String
  lat         Float?
  lng         Float?
  bedrooms    Int?
  bathrooms   Int?
  area        Int?
  amenities   String[]
  images      String[]
  approved    Boolean   @default(false)
  publishedAt DateTime?
  landlordId  String
  landlord    Landlord  @relation(fields: [landlordId], references: [id])
  leases      Lease[]
  tickets     MaintenanceTicket[]
  bookingInquiries BookingInquiry[]
  views       ViewEvent[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([city])
  @@index([status])
  @@index([price])
  @@index([bedrooms])
  @@index([type])
}

model Lease {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id])
  startDate   DateTime
  endDate     DateTime?
  monthlyRent Int
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MaintenanceTicket {
  id              String   @id @default(cuid())
  requesterUserId String
  requester       User     @relation("TicketRequester", fields: [requesterUserId], references: [id])
  propertyId      String
  property        Property @relation(fields: [propertyId], references: [id])
  title           String
  description     String
  priority        String   @default("normal")
  status          String   @default("open")
  assignedVendorId String?
  timeline        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model BookingInquiry {
  id         String   @id @default(cuid())
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  name       String
  email      String
  phone      String?
  message    String?
  status     String   @default("new")
  createdAt  DateTime @default(now())
}

model Vendor {
  id          String   @id @default(cuid())
  name        String
  serviceTypes String[]
  phone       String?
  email       String?
}

model ViewEvent {
  id         String   @id @default(cuid())
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  userId     String?
  sessionId  String?
  createdAt  DateTime @default(now())
}
